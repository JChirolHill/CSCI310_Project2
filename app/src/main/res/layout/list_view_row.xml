<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/listDrinkName"
        android:layout_width="515dp"
        android:layout_height="60dp"
        android:layout_gravity="clip_horizontal|center_horizontal"
        android:layout_weight="1"
        android:background="@drawable/order_view_list_border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ListQuantity"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/order_view_list_border" />

        <TextView
            android:id="@+id/ListPrice"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/order_view_list_border" />

        <TextView
            android:id="@+id/ListCaffeine"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/order_view_list_border" />

    </LinearLayout>
</LinearLayout>