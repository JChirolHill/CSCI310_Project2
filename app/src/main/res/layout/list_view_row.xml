<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/DrinkView"
        android:layout_width="515dp"
        android:layout_height="60dp"
        android:layout_gravity="clip_horizontal|center_horizontal"
        android:layout_weight="1"
        android:background="@drawable/order_view_list_border"
        android:text="abc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/QuantityView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/order_view_list_border"
            android:text="@string/quantityPrompt" />

        <TextView
            android:id="@+id/PriceView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/order_view_list_border"
            android:text="@string/pricePrompt" />

        <TextView
            android:id="@+id/CaffeineView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/order_view_list_border"
            android:text="@string/caffeinePrompt" />

    </LinearLayout>
</LinearLayout>